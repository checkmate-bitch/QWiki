{
  "manifest_version": 2,

  "name": "QWiki",
  "description": "Search for any word or a string of words on your current page from Wikipedia without leaving the page",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "Wiki_Viewer.html",
    "default_title": "QWiki",
    "default_icon": { "16": "images/icon16.png",
                      "48": "images/icon48.png",
                      "128": "images/icon128.png" }
  },

  "content_scripts": [{
    "css": ["inject.css"],
    "matches": ["http://*/*" , "https://*/*"],
    "js" : ["jquery.min.js" , "inject.js"]
  }],

  "commands": {

    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "open popup"
    },

    "side_panel": {
      "suggested_key": {
        "default": "Alt+Shift+Y"
      },
      "description": "open side panel"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "https://en.wikipedia.org/*"
  ]
}	
